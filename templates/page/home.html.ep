<section id="contact">
    <div class="container-fluid">
        <h1>Contact Information</h1>
        <div class="row contact-details">
            <div class="wow animated fadeInDown col-md-4 col-sm-4" data-wow-duration="1s" data-wow-delay="0.7s">
                <div class="icon"><i class="fa fa-phone"></i></div>
                <div class="light-box box-hover">
                    <h2>Phone</h2>
                    <p><a href="tel:+001234567">+00 123 4567</a></p>
                </div>
            </div>
            <div class="wow animated fadeInDown col-md-4 col-sm-4" data-wow-duration="1s" data-wow-delay="0.5s">
                <div class="light-box box-hover">
                    <div class="icon"><i class="fa fa-map-marker"></i></div>
                    <h2>Location</h2>
                    <p>123 Gummy Road</p>
                    <a class="btn btn-primary btn-lg btn-block"
                       href="https://www.google.es/maps/place/Pla%C3%A7a+de+Catalunya/@41.3896095,2.1622841,16z/data=!4m13!1m7!3m6!1s0x12a49816718e30e5:0x44b0fb3d4f47660a!2sBarcelona!3b1!8m2!3d41.3850639!4d2.1734035!3m4!1s0x0:0x1eecc2af1c60d64b!8m2!3d41.387016!4d2.1700466"
                       target="_blank">
